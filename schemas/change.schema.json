{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://localhost:8888/change.schema.json",
    "title": "Change",
    "description": "A change is contained in a job.",
    "type": "object",
    "properties": {
        "host": {
            "description": "The host that the change is on.",
            "type": "string"
        },
        "port": {
            "description": "The port to use.",
            "type": "integer",
            "minimum": 1,
            "maximum": 65535
        },
        "config_path": {
            "description": "The path to the new config.",
            "type": "string"
        },
        "credentials": {
            "description": "The credentials to use.",
            "$ref": "http://localhost:8888/credentials.schema.json"
        }
    },
    "required": ["host", "config_path"]
}